<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top Section: Banner Image with a placeholder for Company Logo (not adding any new image) -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <!-- Banner Image (using the same image name) -->
            <ImageView
                android:id="@+id/bannerImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img" />

            <!-- Company Logo placeholder (left empty as per your request) -->
            <!-- To use an existing image as a logo, simply set its src attribute below -->
            <!-- Example (uncomment if needed):
            <ImageView
                android:id="@+id/companyLogo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:src="@drawable/img" />
            -->
        </FrameLayout>

        <!-- About Title -->
        <TextView
            android:id="@+id/aboutTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About Us"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#FFA500"
            android:gravity="center"
            android:layout_marginTop="56dp"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1" />

        <!-- Company Description -->
        <TextView
            android:id="@+id/aboutDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="At Our Company, we are dedicated to excellence. With a focus on innovation, customer-centric solutions, and unparalleled service, we strive to lead the market while staying true to our core values. Our team of experts is committed to pushing boundaries and delivering quality products and services."
            android:textSize="16sp"
            android:textColor="#FFA500"
            android:lineSpacingExtra="4dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1" />

        <!-- Mission Section Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_margin="16dp"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/missionContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Our mission is to empower our clients through innovative, sustainable, and cost-effective solutions that drive growth and create lasting value. We are committed to excellence and dedicated to exceeding expectations."
                android:textSize="16sp"
                android:textColor="#FFA500"
                android:layout_marginTop="8dp"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1" />

            <TextView
                android:id="@+id/missionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:text="Our Mission"
                android:textColor="#FFA500"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Vision Section Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/visionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Our Vision"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFA500"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1" />

            <TextView
                android:id="@+id/visionContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Our vision is to be a global leader in our industry, inspiring change and driving progress through innovation, integrity, and a relentless commitment to excellence."
                android:textSize="16sp"
                android:textColor="#FFA500"
                android:layout_marginTop="8dp"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1" />
        </LinearLayout>

        <!-- Contact Information Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/contactTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get in Touch"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFA500"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/emailIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_email" />

                <TextView
                    android:id="@+id/emailContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" info@ourcompany.com"
                    android:textSize="16sp"
                    android:textColor="#FFA500"
                    android:layout_marginStart="8dp"
                    android:shadowColor="#000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/phoneIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_phone" />

                <TextView
                    android:id="@+id/phoneContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" +1 (234) 567-8901"
                    android:textSize="16sp"
                    android:textColor="#FFA500"
                    android:layout_marginStart="8dp"
                    android:shadowColor="#000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/locationIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_location" />

                <TextView
                    android:id="@+id/locationContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 123 Innovation Road, Tech City"
                    android:textSize="16sp"
                    android:textColor="#FFA500"
                    android:layout_marginStart="8dp"
                    android:shadowColor="#000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
