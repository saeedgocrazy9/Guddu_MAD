<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollViewBilling"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF3E0"
    android:fillViewport="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Page Title -->
        <TextView
            android:id="@+id/text_billing_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Billing Summary"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#E65100"
            android:layout_marginBottom="16dp" />

        <!-- Booking Details Container -->
        <LinearLayout
            android:id="@+id/layout_booking_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFE0B2"
            android:padding="12dp"
            android:layout_marginBottom="16dp">

            <!-- Booking Detail Title -->
            <TextView
                android:id="@+id/text_booking_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Booking Details"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#E65100"
                android:layout_marginBottom="8dp" />

            <!-- Room Type Detail -->
            <TextView
                android:id="@+id/text_room_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Room Type: Deluxe Suite"
                android:textSize="16sp"
                android:textColor="#BF360C"
                android:layout_marginBottom="4dp" />

            <!-- Check-In Date Detail -->
            <TextView
                android:id="@+id/text_check_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check-In: 2025-04-01"
                android:textSize="16sp"
                android:textColor="#BF360C"
                android:layout_marginBottom="4dp" />

            <!-- Check-Out Date Detail -->
            <TextView
                android:id="@+id/text_check_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check-Out: 2025-04-05"
                android:textSize="16sp"
                android:textColor="#BF360C"
                android:layout_marginBottom="4dp" />

        </LinearLayout>

        <!-- Payment Summary Container -->
        <LinearLayout
            android:id="@+id/layout_payment_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFE0B2"
            android:padding="12dp"
            android:layout_marginBottom="16dp">

            <!-- Payment Summary Title -->
            <TextView
                android:id="@+id/text_payment_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment Summary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#E65100"
                android:layout_marginBottom="8dp" />

            <!-- Subtotal -->
            <TextView
                android:id="@+id/text_subtotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subtotal: $200.00"
                android:textSize="16sp"
                android:textColor="#BF360C"
                android:layout_marginBottom="4dp" />

            <!-- Taxes -->
            <TextView
                android:id="@+id/text_taxes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Taxes: $20.00"
                android:textSize="16sp"
                android:textColor="#BF360C"
                android:layout_marginBottom="4dp" />

            <!-- Discount -->
            <TextView
                android:id="@+id/text_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Discount: -$10.00"
                android:textSize="16sp"
                android:textColor="#BF360C"
                android:layout_marginBottom="4dp" />

            <!-- Total Amount -->
            <TextView
                android:id="@+id/text_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total: $210.00"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#E65100"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Proceed to Payment Button -->
        <Button
            android:id="@+id/button_proceed_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Proceed to Payment"
            android:textSize="18sp"
            android:background="#E65100"
            android:textColor="@android:color/white"
            android:padding="12dp" />

    </LinearLayout>
</ScrollView>