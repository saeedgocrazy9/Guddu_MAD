<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F2F2F2"
    android:id="@+id/admin"
    android:padding="16dp">

    <!-- Admin Panel Title -->
    <TextView
        android:id="@+id/tvAdminTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\ud83c\udfe8 Hotel Admin Panel"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#333"
        android:layout_gravity="center"
        android:paddingBottom="10dp" />

    <!-- Stats Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="3"
        android:paddingBottom="16dp">

        <!-- Rooms Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:elevation="4dp"
            android:layout_margin="6dp"
            android:padding="12dp"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tvTotalRooms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rooms"
                android:textSize="14sp"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <!-- Bookings Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:background="#FF9800"
            android:elevation="4dp"
            android:layout_margin="6dp"
            android:padding="12dp"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tvTotalBookings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bookings"
                android:textSize="14sp"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <!-- Users Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:background="#4CAF50"
            android:elevation="4dp"
            android:layout_margin="6dp"
            android:padding="12dp"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/tvTotalUsers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Users"
                android:textSize="14sp"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>

    <!-- Buttons Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="6dp"
        android:layout_marginBottom="12dp"
        android:padding="16dp"
        android:orientation="vertical"
        android:background="#FFFFFF">

        <Button
            android:id="@+id/btnManageRooms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\ud83d\udecf\ufe0f Manage Rooms"
            android:textSize="16sp"
            android:backgroundTint="#4CAF50"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:layout_marginBottom="10dp" />

        <Button
            android:id="@+id/btnManageBookings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\ud83d\uddcf Manage Bookings"
            android:textSize="16sp"
            android:backgroundTint="#FF9800"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:layout_marginBottom="10dp" />

        <Button
            android:id="@+id/btnManageUsers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\ud83d\udc64 Manage Users"
            android:textSize="16sp"
            android:backgroundTint="#2196F3"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:layout_marginBottom="10dp" />
    </LinearLayout>
</LinearLayout>
